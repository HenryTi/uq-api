{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2017"
        ],
        "target": "es2017",
        "sourceMap": true,
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "watch": false,
        "outDir": "out",
        "resolveJsonModule": true,
        //"baseUrl": "ts"
        //"sourceRoot": "ts"
    },
    "include": [
        "package.json",
        "ts/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "*.js"
    ]
}